pipeline {
    agent any

    environment {
        IMAGE_NAME = "flask-k8s"
        IMAGE_TAG = "latest"
    }

    stages {

        stage('Build Docker Image') {
            steps {
                echo "Building Docker image in local Minikube..."
                sh '''
                    # Point Docker CLI to Minikube's Docker daemon
                    eval $(minikube docker-env --shell bash)

                    # Disable TLS verification for Jenkins user (local testing only)
                    export DOCKER_TLS_VERIFY=""

                    # Build the Docker image
                    docker build -t $IMAGE_NAME:$IMAGE_TAG .
                '''
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                echo "Deploying to Kubernetes..."
                sh '''
                    # Make sure kubectl uses Minikube context
                    kubectl config use-context minikube

                    # Apply all Kubernetes manifests
                    kubectl apply -f kubernetes/
                '''
            }
        }

        stage('Verify Deployment') {
            steps {
                echo "Verifying deployment in Minikube..."
                sh '''
                    kubectl rollout status deployment/flask-app
                    kubectl get pods
                    kubectl get services
                '''
            }
        }
    }
}
